<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pizza_slice"
                android:background="#f0f0f0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Large Pizza"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@id/ivItemImage"
                app:layout_constraintStart_toEndOf="@id/ivItemImage"
                app:layout_constraintEnd_toStartOf="@id/ivEdit"/>

            <TextView
                android:id="@+id/tvItemSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pepperoni, Mushrooms"
                android:textSize="14sp"
                android:textColor="#757575"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvItemName"
                app:layout_constraintStart_toEndOf="@id/ivItemImage"
                app:layout_constraintEnd_toStartOf="@id/ivEdit"/>

            <TextView
                android:id="@+id/tvItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±18.50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvItemSubtitle"
                app:layout_constraintStart_toEndOf="@id/ivItemImage"
                app:layout_constraintBottom_toBottomOf="@id/ivItemImage"/>

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@id/ivItemImage"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/ivEdit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ivItemImage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
